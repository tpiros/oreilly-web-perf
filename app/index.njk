---
layout: 'layout/base.njk'
---

<main class="my-8 flex-grow">
  <div class="container mx-auto px-6">
    <h3 class="text-gray-700 text-2xl font-medium">Wrist Watches</h3>
    <span class="mt-3 text-sm text-gray-500">200+ Products</span>
    <div
      class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6"
    >
      <!-- prod list -->
      {% for watch in watches %}
        <div
        class="w-full max-w-sm mx-auto rounded-md shadow hover:shadow-lg overflow-hidden"
      >
          <a href="/watch">
            <div class="flex items-end justify-end h-56 w-full">
              {# <img class="w-full object-fill" src="https://res.cloudinary.com/tamas-demo/image/upload/f_auto,q_auto,w_350{{ watch.cldImg }}"/> #}
              <img class="w-full object-fill" src="{{ watch.img }}"/>
            </div>
            <div class="px-5 py-3">
              <h3 class="text-gray-700 uppercase">{{ watch.name }}</h3>
              <span class="text-gray-500 mt-2">Â£{{ watch.price }}</span>
            </div>
            <div class="text-right">
              <button
              class="p-2 rounded-full bg-blue-600 text-white mx-5 mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500"
            >
                <svg
                class="h-5 w-5"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                  <path
                  d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
                </svg>
              </button>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="flex justify-center">
      <div class="flex rounded-md mt-8">
        <a
          href="#"
          class="py-2 px-4 leading-tight bg-white border border-gray-200 text-blue-700 border-r-0 ml-0 rounded-l hover:bg-blue-500 hover:text-white"
        >
          <span>Previous</span></a
        >
        <a
          href="#"
          class="py-2 px-4 leading-tight bg-white border border-gray-200 text-blue-700 border-r-0 hover:bg-blue-500 hover:text-white"
        >
          <span>1</span></a
        >
        <a
          href="#"
          class="py-2 px-4 leading-tight bg-white border border-gray-200 text-blue-700 border-r-0 hover:bg-blue-500 hover:text-white"
        >
          <span>2</span></a
        >
        <a
          href="#"
          class="py-2 px-4 leading-tight bg-white border border-gray-200 text-blue-700 border-r-0 hover:bg-blue-500 hover:text-white"
        >
          <span>3</span></a
        >
        <a
          href="#"
          class="py-2 px-4 leading-tight bg-white border border-gray-200 text-blue-700 rounded-r hover:bg-blue-500 hover:text-white"
        >
          <span>Next</span></a
        >
      </div>
    </div>
  </div>
</main>

<footer class="bg-gray-200">
  <div class="container mx-auto px-6 py-3 flex justify-between items-center">
    <a href="#" class="text-xl font-bold text-gray-500 hover:text-gray-400"
      >Brand</a
    >
    <p class="py-2 text-gray-500 sm:py-0">All rights reserved</p>
  </div>
</footer>